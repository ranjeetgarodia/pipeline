pipeline {
 agent any
 stages {
  stage('SCM Checkout') {
   git 'https://github.com/pranikita/maven-project-1'
  }
 } {
  stage('Compile Stage') {
   steps {
    withMaven(maven: 'master-maven') {
     sh 'mvn clean compile'
    }
   }
  }

  stage('Testing Stage') {
   steps {
    withMaven(maven: 'master-maven') {
     sh 'mvn test'
    }
   }
  }

  stage('install Stage') {
   steps {
    withMaven(maven: 'master-maven') {
     sh 'mvn install'
    }
   }
  }

  stage('deploy to tomcat') {
   steps {
    sshagent(['tomcat-pipeline']) {
     sh 'scp -o StrictHostKeyChecking=no */target/*.war ec2-user@3.224.135.85:/var/lib/tomcat/webapps'
    }
   }
  }
 }
}
